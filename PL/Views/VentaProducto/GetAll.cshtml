@model ML.Venta
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h1>Venta</h1>
        <div class="row">
            <div class="btn btn-success" style="margin:25px" >
                 @Html.ActionLink("+","Formulario")  

              
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <table class="table table-bordered table-responsive">
                <head>
                    <tr>
                        <th>Nombre</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                        <th>Hora</th>

                    </tr>
                </head>
                <body>
                    @foreach (ML.Venta venta in Model.Ventas)
                    {
                        <tr>
                            <td>@venta.NombreProducto</td>

                            <td>@venta.Cantidad</td>
                            <td>@venta.Total</td>
                            <td>@venta.VentaHora</td>
                        </tr>
                    }

                </body>

            </table>
        </div>
