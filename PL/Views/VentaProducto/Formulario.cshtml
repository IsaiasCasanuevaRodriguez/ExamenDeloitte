@model ML.Venta
@{
    ViewBag.Title = "Formulario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container" style="margin-top:50px ">

    <div class="row">
        @using (Html.BeginForm("Formulario", "VentaProducto", FormMethod.Post))
        {
            <div class="container ">

                <div class="col-lg-10">
                    <div class="">
                        @Html.LabelFor(model => model.NombreProducto)
                        @Html.TextBoxFor(model => model.NombreProducto, new { @class = "form-control" })
                        @*@Html.DropDownListFor(model => model.Producto.)*@
                    </div>
                </div>
                <div class="col-lg-10 " >
                    <div class="">
                        @Html.LabelFor(model => model.Cantidad)
                        @Html.TextBoxFor(model => model.Cantidad, new { @class = "form-control" })

                    </div>
                </div>
                <div class="col-lg-10 " style="margin-top:5px;">
                    <div class="">
                        @Html.LabelFor(model => model.Total)
                        @Html.TextBoxFor(model => model.Total, new { @class = "form-control" })

                    </div>
                </div>


                <div class="col-lg-10" style="margin:15px;">
                    <div class="">


                        <input type="submit" class="btn btn-success" />


                    </div>
                </div>

            </div>
        }
    </div>

</div>
